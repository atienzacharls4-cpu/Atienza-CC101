public class mac10 {
    public static void main(String[] args) {
        int[] arr = {1, 3, 7, 8, 10, 2};

        int index = -1; 
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] % 2 == 0) { 
                index = i;
                break; 
            }
        }

        System.out.println("Index of first even number: " + index);
    }
}
